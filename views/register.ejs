<%- include('head') -%>
<body class="body">
    <%- include('logo') -%>
        <form id="register" class="register" method="post" action="/user/register">
            
            <h2>Create an account</h2>
            <section><i class="fa fa-user"></i></i><input type="email" name="email" id="email"  placeholder="Email" required></section>
            <section><i class="fa fa-lock"></i><input type="password" name="password" id="password" placeholder="Password" required></section>
            <section><i class="fa fa-lock"></i><input type="password" id="verify-password" placeholder="Verify Password" required></section>
            <% if (error) { %>
                <p class="server_error"><%= error %></p>
                <% } %>  
            <p class="errors"></p>
            <input type="submit" class="register_submit" value="submit">
        </form>

        <script src="/js/register_script.js"></script>
</body>
</html>